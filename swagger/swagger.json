        "produces": [
          "application/json"
        ],
        "tags": [
          "payment"
        ],
        "summary": "Reads one payment by id.",
        "operationId": "ReadOnePaymentHandler",
        "parameters": [
          {
            "type": "string",
            "description": "ID of the payment",
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/refund/{id}": {
      "get": {
        "produces": [
          "application/json"
        ],
        "tags": [
          "refund"
        ],
        "summary": "Reads one refund by id.",
        "operationId": "ReadOneRefundHandler",
        "parameters": [
