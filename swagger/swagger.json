            "name": "id",
            "in": "query"
          },
          {
            "type": "string",
            "x-go-name": "Type",
            "name": "type",
            "in": "query"
          },
          {
            "type": "string",
            "x-go-name": "Amount",
            "name": "amount",
            "in": "query"
          },
